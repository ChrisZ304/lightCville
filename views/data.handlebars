<link rel="stylesheet" href="/css/datastyle.css">

<section id="dataSection">

    <!-- Leaflet Map -->
    <div id="mapid"></div>

    <!-- Buttons should go here -->
    <div id="buttonRow"> 
        <button id="dataFilterBtn" data-bs-toggle="modal" data-bs-target="#exampleModal"> Data Filter </button>
        <button id="exportBtn"> Export to .pdf </button>
        <button id="addRecordBtn"> Add Record </button>
        <button id="editRecordBtn"> Edit Records </button>
    </div>
    
    <!-- Data Filter modal HTML, Appears upon clicking 'Data Filter' -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Choose Data Filters</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form>

                <div class="input-group mb-3">

                </div>

                <div class="mb-3">
                    <label for="decal_colo" class="form-label">decal_colo</label>
                    <select class="custom-select w-50" id="decal_colo">
                        <option selected>Choose...</option>
                        <option value="GRE">GRE</option>
                        <option value="YLO">YLO</option>
                        <option value="LTBL">LTBL</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="owner" class="form-label">owner</label>
                    <select class="custom-select w-50" id="owner">
                        <option selected>Choose...</option>
                        <option value="None">None</option>
                        <option value="DOM">DOM</option>
                        <option value="PVT">PVT</option>
                        <option value="MUN">MUN</option>
                    </select>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" id='makeDataFilterBtn' data-bs-dismiss="modal">Go!</button>
        </div>
        </div>
    </div>
    </div>


    <!-- Tabulator Table -->
    <div id="dataTable"></div>

</section>


